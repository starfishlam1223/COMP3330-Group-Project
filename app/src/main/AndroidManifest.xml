<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="hk.hkucs.yellowobjects">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_yellow_objects_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_yellow_objects_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="hk.hkucs.yellowobjects.ui.ybmap.Result"></activity>
        <activity android:name="hk.hkucs.yellowobjects.ui.ybmap.Answer" />
        <activity
            android:name="hk.hkucs.yellowobjects.ui.ybmap.Question"
            android:label="@string/title_activity_question"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="hk.hkucs.yellowobjects.ui.schedule.UserEventInfo" />
        <activity android:name="hk.hkucs.yellowobjects.ui.schedule.AddEvent" />
        <activity android:name="hk.hkucs.yellowobjects.ui.poster_page.EventInfo" />
        <activity
            android:name="hk.hkucs.yellowobjects.ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>