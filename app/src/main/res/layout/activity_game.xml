<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_root"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/fat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:contentDescription="@string/fat_ma_cute_cute_pic"
        android:requiresFadingEdge="horizontal|vertical"
        android:scaleX="1"
        android:scaleY="1"
        ripple:srcCompat="@drawable/fat_ma_a" />


    <FrameLayout
        android:id="@+id/frame1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fat"
        android:padding="0dp"
        android:background="@android:color/white" >
        <com.example.yellowobjects.ui.game.voice.ProgressView
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@android:color/background_dark" />
        <TextView
            android:id="@+id/txt_time"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/zero_sec"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
    </FrameLayout>

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame1"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="@string/description_touch_below"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:background="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_description"
        android:padding="0dp"
        android:background="@android:color/white" >

        <com.example.yellowobjects.ui.game.voice.VolumeVisualizerView
            android:id="@+id/visualizer"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:alpha="1"
            android:background="@android:color/background_dark"
            android:clickable="true" />
    </FrameLayout>


    <ImageView
        android:id="@+id/bigpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="false"
        android:contentDescription="@string/fat_ma_cute_cute_pic"
        android:requiresFadingEdge="horizontal|vertical"
        android:scaleType="centerInside"
        android:scaleX="1"
        android:scaleY="1"
        android:visibility="gone"
        ripple:srcCompat="@drawable/bigheadphoto"
        android:clickable="true" />

</RelativeLayout>